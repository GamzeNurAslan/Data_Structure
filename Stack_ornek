package com.mycompany.stack_ornek;
public class Stack_ornek {
    private static class Node {
        int value;
        Node next;
        
        public Node(int value) {
            this.value = value;
            this.next = null;
        }
    }
    
    private Node top;
    
    public Stack_ornek() {
        this.top = null;
    }
    
    public void push(int value) {
        Node newNode = new Node(value);
        newNode.next = top;
        top = newNode;
    }
    
    public void sirala() {
        if (top == null) {
            return;
        }
                int topValue = top.value;
        
        Node current = top;
        Node previous = null;
        
        while (current != null && current.value < topValue) {
            top = current.next;  
            current = top;  
        }
        
        while (current != null) {
            if (current.value < topValue) {
                previous.next = current.next;  
            } else {
                previous = current;  
            }
            current = current.next;  
        }
    }
    
    public void yazdir() {
        Node current = top;
        while (current != null) {
            System.out.print(current.value + " ");
            current = current.next;
        }
        System.out.println();
    }
    
    public static void main(String[] args) {
        Stack_ornek stack = new Stack_ornek();
        
        stack.push(5);
        stack.push(3);
        stack.push(7);
        stack.push(2);
        stack.push(10);
        
        System.out.println("Orijinal Stack:");
        stack.yazdir(); 
        
        stack.sirala();
        
        System.out.println("SÄ±rala:");
        stack.yazdir(); 
    }
}
